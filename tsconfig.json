{
    "compilerOptions": {
      "target": "es6",
      "typeRoots": ["@types"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "removeComments": true,
      "outDir": "./dist"
    },
    "include": ["bin/server.ts"]
  }